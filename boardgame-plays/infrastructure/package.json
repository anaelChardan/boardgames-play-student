{
  "name": "@boardava/infrastructure",
  "main": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "scripts": {
    "clear": "rm -rf ./build ./tsconfig.tsbuildinfo",
    "types:check": "tsc --noEmit",
    "build": "tsc -b",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "tests": "vitest run --dir src/__tests__/",
    "test:unit": "vitest run --dir src/__tests__/unit",
    "test:functionnal": "vitest run --dir src/__tests__/functionnal",
    "test:integration": "vitest run --dir src/__tests__/integration"
  },
  "dependencies": {
    "@boardava/domain": "workspace:*",
    "fastify": "^5.1.0",
    "fastify-type-provider-zod": "^4.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@boardava/eslint-config": "workspace:*",
    "@types/node": "^22.8.6",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20"
  },
  "volta": {
    "extends": "../../package.json"
  }
